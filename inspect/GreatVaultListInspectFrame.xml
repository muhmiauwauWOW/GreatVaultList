<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	
	
	<Script file="guard.lua"/>
	<Script file="GreatVaultListInspectFrame.lua"/>
	
	<Script file="ListMixin.lua"/>


   <Frame name="GreatVaultListInspectFrame" toplevel="true" hidden="true" clampedToScreen="true" movable="true" enableMouse="true" parent="UIParent" mixin="GreatVaultListInspectMixin" inherits="PortraitFrameTemplate" >
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Frames>
			<Frame parentKey="Drag" enableMouse="true">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="0" y="0"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="TOPRight" x="0" y="-60"/>
				</Anchors>
			</Frame>

			<Frame parentKey="DarkOverlay" setAllPoints="true" hidden="true" frameLevel="100">
				<Anchors>
					<Anchor point="TOPLEFT" x="3" y="-21"/>
					<Anchor point="BOTTOMRIGHT" x="-3" y="3"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture setAllPoints="true">
							<Color r="0" g="0" b="0" a="0.8"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			<Frame parentKey="LoadingSpinner" hidden="true" inherits="SpinnerTemplate" frameLevel="200">
				<Size x="90" y="90"/>
				<Anchors>
					<Anchor point="CENTER" x="0" y="-15"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="SearchingText" inherits="GameFontNormalHuge4" text="Await Data">
							<Anchors>
								<Anchor point="BOTTOM" relativePoint="TOP" x="0" y="10"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

			<Frame parentKey="ListFrame" inherits="GreatVaultListContentTemplate" hidden="true"  mixin="GreatVaultListInspectListMixin"/>

		</Frames>
		<Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="InspectText" inherits="Number14FontWhite" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-35"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<!-- <OnHide method="OnHide"/> -->
		</Scripts>
	</Frame>

</Ui>